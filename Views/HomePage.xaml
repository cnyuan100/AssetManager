<Page
    x:Class="AssetManager.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <StackPanel>
            <TextBlock Text="{x:Bind ViewModel.GreetingMessage, Mode=OneWay}" 
                       Style="{ThemeResource SubtitleTextBlockStyle}" />
            <StackPanel Margin="{ThemeResource SmallTopBottomMargin}">
                <TextBox x:Uid="Home_UserTextBox" Style="{StaticResource DefaultTextBoxStyle}"
                     Margin="{ThemeResource XSmallTopMargin}"/>
                <PasswordBox x:Uid="Home_PasswaordTextBox" Style="{StaticResource DefaultTextBoxStyle}"
                     Margin="{ThemeResource XSmallTopMargin}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="{ThemeResource SmallTopBottomMargin}">
                <Button Style="{StaticResource AccentButtonStyle}" x:Uid="Home_LoginButton"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
